@model Website.ViewModels.Home.TeamSketchViewModel
@{
    ViewBag.Title = "Team Sketch";
}

<div class="page">
    <div class="banner">
        <div class="banner-wrap middle">
            <header class="banner-details">
                <h1 class="banner-title">@ViewBag.Title</h1>
                <br />
                <p>Share a canvas with your friends or random people.</p>
                <ul class="banner-links">
                    <li><a href="https://github.com/davidtimovski/team-sketch" title="Source Code" target="_blank" rel="noopener"><i class="icon-github" aria-hidden="true"></i>GitHub</a></li>
                </ul>
            </header>
        </div>
    </div>
    <section>
        <div class="section-title">Features</div>
        <div class="middle">
            <div class="section-content">
                <div class="section-item">
                    <p>Create a room and connect with friends or join a random room and connect with a stranger. Share the canvas and show off your terrible drawing skills.</p>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div id="download" class="section-title">Download</div>
        <div class="middle">
            <div class="section-content">
                <div class="section-item">
                    <div class="download-table-title">
                        <div>Version @Model.Version</div>
                        <div class="release-date">@Model.ReleaseDate</div>
                    </div>

                    <table>
                        <thead>
                            <tr>
                                <th>Platform</th>
                                <th>Architecture</th>
                                <th>Download Link</th>
                                <th>File Size</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Windows</td>
                                <td>64-bit</td>
                                <td>
                                    <a href="https://www.davidtimovski.com/downloads/team-sketch/team-sketch_@(Model.Version)_win64_setup.exe">team-sketch_@(Model.Version)_win64_setup.exe</a>
                                </td>
                                <td>@Model.WindowsFileSize</td>
                            </tr>
                        </tbody>
                        <tbody>
                            <tr>
                                <td rowspan="2">Debian, Ubuntu</td>
                                <td>64-bit</td>
                                <td>
                                    <a href="https://www.davidtimovski.com/downloads/team-sketch/team-sketch_@(Model.Version)_amd64.deb">team-sketch_@(Model.Version)_amd64.deb</a>
                                </td>
                                <td>@Model.DebianUbuntu64FileSize</td>
                            </tr>
                            <tr>
                                <td>ARM</td>
                                <td>
                                    <a href="https://www.davidtimovski.com/downloads/team-sketch/team-sketch_@(Model.Version)_armhf.deb">team-sketch_@(Model.Version)_armhf.deb</a>
                                </td>
                                <td>@Model.DebianUbuntuARMFileSize</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
